<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/RRToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/purple_200">

            <RelativeLayout
                android:id="@+id/RR_back"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/back">

                </ImageView>

            </RelativeLayout>

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/txtitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orders #121212"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold">

            </TextView>


            <TextView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_below="@+id/txtitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Smith"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                >


            </TextView>

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/RRToolbar"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txtAccept"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_green"
                    android:elevation="@dimen/_5sdp"
                    android:gravity="center"
                    android:padding="@dimen/_12sdp"
                    android:text="Accept"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />


                <TextView
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_red"
                    android:elevation="@dimen/_5sdp"
                    android:gravity="center"
                    android:padding="@dimen/_12sdp"
                    android:text="Decline"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />




            </LinearLayout>


            <TextView
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ordered Items"
                android:textColor="@color/purple_200"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold">

            </TextView>


            <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                tools:ignore="MissingDefaultResource">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/rounded_user_image"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:scaleType="centerInside"
                        android:src="@drawable/img_home_one" />

                    <LinearLayout
                        android:id="@+id/llName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">


                        <TextView
                            android:id="@+id/txtName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maximus Gold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs.180 per KG"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/_12sdp"
                            />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <LinearLayout
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/border"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="@dimen/_10sdp"
                                        android:layout_height="@dimen/_10sdp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/minus">

                                    </ImageView>

                                </RelativeLayout>

                                <View
                                    android:layout_width="1sp"
                                    android:layout_height="match_parent"
                                    android:background="@color/purple_200">

                                </View>

                                <RelativeLayout
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="01"
                                        android:textColor="@color/purple_200"
                                        android:textSize="@dimen/_14sdp"
                                        >

                                    </TextView>

                                </RelativeLayout>


                                <View
                                    android:layout_width="1sp"
                                    android:layout_height="match_parent"
                                    android:background="@color/purple_200">

                                </View>


                                <RelativeLayout
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="@dimen/_10sdp"
                                        android:layout_height="@dimen/_10sdp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/add">

                                    </ImageView>

                                </RelativeLayout>

                            </LinearLayout>

                            <RelativeLayout
                                android:padding="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/border_orange"
                                >


                                <TextView
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reorder"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp"
                                    />



                            </RelativeLayout>

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                tools:ignore="MissingDefaultResource">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/rounded_user_image1"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:scaleType="centerInside"
                        android:src="@drawable/img_home_one" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maximus Gold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs.180 per KG"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/_12sdp"
                            />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <LinearLayout
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/border"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="@dimen/_10sdp"
                                        android:layout_height="@dimen/_10sdp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/minus">

                                    </ImageView>

                                </RelativeLayout>

                                <View
                                    android:layout_width="1sp"
                                    android:layout_height="match_parent"
                                    android:background="@color/purple_200">

                                </View>

                                <RelativeLayout
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="01"
                                        android:textColor="@color/purple_200"
                                        android:textSize="@dimen/_14sdp"
                                        >

                                    </TextView>

                                </RelativeLayout>


                                <View
                                    android:layout_width="1sp"
                                    android:layout_height="match_parent"
                                    android:background="@color/purple_200">

                                </View>


                                <RelativeLayout
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="@dimen/_10sdp"
                                        android:layout_height="@dimen/_10sdp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/add">

                                    </ImageView>

                                </RelativeLayout>

                            </LinearLayout>

                            <RelativeLayout
                                android:padding="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/border_orange"
                                >


                                <TextView
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reorder"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp"
                                    />



                            </RelativeLayout>

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/purple_200"
                        android:textSize="@dimen/_16sdp"
                        android:text="Home Address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>


                </RelativeLayout>


                <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:text="21,Alex Davidson Avenue,Opposite Omegatron Vicent smith Victoria island lagas nigera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</layout>
